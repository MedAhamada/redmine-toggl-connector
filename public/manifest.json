{
  "manifest_version": 2,

  "name": "Redmine-Toggl Connector",
  "description": "Browser Extension, Firefox, Google Chrome",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "permissions": [
    "storage",
    "notifications",
    "<all_urls>"
  ]
}
